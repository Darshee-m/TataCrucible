<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"/>
        <!--<fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/g_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"/>-->


        <Button
            android:id="@+id/pothole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimary"
            android:onClick="onPotholeClicked"
            android:padding="30sp"
            android:text="@string/pothole_detection"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/noise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimary"
            android:onClick="onNoiseClicked"
            android:padding="30sp"
            android:text="@string/noise"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/luminance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@color/colorPrimary"
            android:onClick="onLuminanceClicked"
            android:padding="30sp"
            android:text="@string/luminance"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/white" />



    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

